<div class="container px-13">
   <div class="space2">
      <h2><strong> Crear Pregunta </strong></h2>
      <hr class="style17">

      <% var url='/feedback/crearPregunta/' + id + '/' + niv + '/' + dim + '/' + nombre;%>

      <div class="row d-flex justify-content-center">
         <div class="col-7">
            <form action="<%=url%>" id="crearPregunta" n method="POST">
               <div class="card">
                  <h5 class="card-header">Crear pregunta</h5>
                  <div class="card-body">
                     <label class="form-label" id="basic-addon1">Pregunta</label>
                     <textarea class="form-control" name="textoPregunta" id="textoPregunta"
                        placeholder="Ingrese su pregunta" aria-describedby="QuestionInput" rows="4" cols="50"
                        required></textarea>
                     <br>
                     <label class="form-label" for="inputTipo">Tipo de Pregunta</label>
                     <select class="form-select" name="inputTipo" id="inputTipo" required>
                        <option value="" disabled selected>Selecciona un tipo</option>
                        <option value="1"> NÃºmerica </option>
                        <option value="2"> Texto </option>
                     </select>
                  </div>
               </div>
               <br>
               <input id="button_create" type="submit" style="margin:auto" class="btn btn-dark" value="Crear">
               <a id="button1" class="btn btn-outline-dark"> Regresar </a>
            </form>
         </div>
      </div>
   </div>

   <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
      <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path
          d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
      </symbol>
      <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path
          d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
      </symbol>
    </svg>

   <div id="toast" name="toast" style="display: none;" class="col-md-auto alert-float">
      <div class="alert alert-warning alert-dismissible fade show d-flex align-items-center"
         role="alert">
         <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img"
            aria-label="Warning:">
            <use xlink:href="#exclamation-triangle-fill" />
         </svg>
        <div>
          Es necesario escribir algo para poder crear la pregunta
        </div>
        <button class="btn-close" type="button" data-dismiss="alert"
          aria-label="Close"></button>
      </div>
   </div>

</div>
<%- include('includes/foot.ejs') %>

<script>
   document.getElementById("button1").onclick = () => {
      history.go(-1);
   }


      document.getElementById('crearPregunta').onsubmit = () =>  {

         if (document.getElementById("textoPregunta").value.trim() == ""){
            document.getElementById("toast").style.display = "block";
            return false;
         }
         else {
            return true;
         }

      }
   
</script>