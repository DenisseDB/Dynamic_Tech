            <% var nombreBusiness = 1 %>

            <% for (let pregunta of preguntasC) { %>
              <h5>
                <%= pregunta.pregunta %>
              </h5>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="<%= nombreBusiness  %>" id="C1"
                  value="1">
                <label class="form-check-label" for="C1">1</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="<%= nombreBusiness  %>" id="C2"
                  value="2">
                <label class="form-check-label" for="C2">2</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="<%= nombreBusiness %>" id="C3"
                  value="3">
                <label class="form-check-label" for="C3">3</label>
              </div>
           
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="<%= nombreBusiness  %>" id="C4"
                  value="4">
                <label class="form-check-label" for= "C4">4</label>
              </div>
         
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="<%= nombreBusiness %>" id="C5"
