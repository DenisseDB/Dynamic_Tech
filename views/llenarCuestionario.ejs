<%- include('includes/sidenavsup.ejs') %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  

  <body>
    <h2> Cuestionario para Feedback de <%= preguntasC[0].nombre %>
        <%= preguntasC[0].apellidoP %>
          <%= preguntasC[0].apellidoM %>
    </h2><br>

    <div class='container'>
      <form id = 'FormularioGeneral'>
        <div class="card">
          <h5 class="card-header">Preguntas de Craft</h5>
          <div class="card-body">
            
            <% var nombreCraft = 1 %>

              <% for (let pregunta of preguntasC) { %>
                <h5>
                  <%= pregunta.pregunta %>
                </h5>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="<%= nombreCraft  %>" id="C1"
                    value="1">
                  <label class="form-check-label" for="C1">1</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="<%= nombreCraft  %>" id="C2"
                    value="2">
                  <label class="form-check-label" for="C2">2</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="<%= nombreCraft  %>" id="C3"
                    value="3">
                  <label class="form-check-label" for="C3">3</label>
                </div>
             
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="<%= nombreCraft  %>" id="C4"
                    value="4">
                  <label class="form-check-label" for= "C4">4</label>
                </div>
           
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="<%= nombreCraft  %>" id="C5"
                    value="5">
                  <label class="form-check-label" for="C5">5</label>
                </div>

                <% nombreCraft ++  %>
                <br><br>
                <% } %>
          </div>
        </div>
        <br>


