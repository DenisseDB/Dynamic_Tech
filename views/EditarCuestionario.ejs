                     <% if (typeof preguntas_cuestionario == "object") {%>
                     <% for (let pregunta of preguntas_cuestionario) {%>
                     <% preguntas_incluidas.push(pregunta.idPregunta);%>
                     <% } %>
                     <% } %>

