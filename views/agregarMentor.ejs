                                                <option value="<%= mentor.idEmpleado %>">
                                                    <%= mentor.nombre%>
                                                        <%= mentor.apellidoP%>
                                                            <%= mentor.apellidoM%>
                                                </option>
                                                <% } %>
                                        </select>
                                    </td>
                                </tr>
                                <tr>

                                    <th scope="row">Mentorados asignables: </th>
                                    <td>

                                        <select id="mentorados" name="mentorados" class="selectpicker" multiple
                                            data-live-search="true" title="Selecciona uno o varios mentorados"
                                            data-width="100%" required>
                                            <% for (let mentorado of noMentorados) { %>
                                                <option value="<%= mentorado.idEmpleado %>">
                                                    <%= mentorado.nombre%>
                                                        <%= mentorado.apellidoP%>
                                                            <%= mentorado.apellidoM%>
                                                </option>
                                                <% } %>
                                        </select>
                </div>
                </div>
                </td>
                </tr>
                <tr>
                
                    <td>
                        <a href="/miChapter" class="btn btn-secondary">Atrás</a>
                    </td>
                
                    <td>
                
                        <input type="submit" value="Guardar cambios" class="btn btn-dark" />
                
                
                    </td>
                </tr>
                </form>


            </tbody>
            </table>
        </div>
    </div>
