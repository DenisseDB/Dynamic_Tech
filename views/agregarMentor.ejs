            <div class="col-sm-12">
                <div class="card">
                    <h5 class="card-header" style="font-size: larger;"><i class="bi bi-person-plus-fill"></i></i> Datos
                        del nuevo
                        Mentor</h5>
                </div>
                <div class="card-body">
                    <!--Para tabla con boostrap-->
                    <table class="table">
                        <tbody>
                            <form id="agregarNuevoMentor" method="post" enctype="multipart/form-data">

                                <tr>
                                    <style>
                                        td {

                                            text-align: center;
                                            vertical-align: middle;
                                        }
                                    </style>

                                    <th scope="row">Nombre mentor: </th>
                                    <td>

                                        <select id="mentorado" name="mentorado" class="selectpicker"
                                            data-live-search="true" title="Selecciona al nuevo mentor"
                                            data-width="100%" required>
